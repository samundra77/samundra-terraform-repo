provider "aws" {
  region = "us-east-2"  
}
 
# Define the VPC
resource "aws_vpc" "samundra" {
  cidr_block           = "10.0.0.0/16"
  enable_dns_support   = true
  enable_dns_hostnames = true
  tags = {
    Name = "samundra-vpc"
  }
}
 
# Define an Internet Gateway
resource "aws_internet_gateway" "samundra-gw" {
  vpc_id = aws_vpc.samundra.id
  tags = {
    Name = "samundra-igw"
  }
}
 
# Define a Public Subnet
resource "aws_subnet" "public" {
  vpc_id                  = aws_vpc.samundra.id
  cidr_block              = "10.0.1.0/24"
  map_public_ip_on_launch = true
  availability_zone       = "us-east-2a"
  tags = {
    Name = "samundra-public-subnet"
  }
}
 
# Define a Route Table
resource "aws_route_table" "public" {
  vpc_id = aws_vpc.samundra.id
  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.samundra-gw.id
  }
  tags = {
    Name = "samundra-public-rt"
  }
}
 
# Associate the Route Table with the Public Subnet
resource "aws_route_table_association" "public" {
  subnet_id      = aws_subnet.public.id
  route_table_id = aws_route_table.public.id
}
 
# Define a Security Group
resource "aws_security_group" "samundra_sg" {
  vpc_id = aws_vpc.samundra.id
  name   = "samundra-web-sg"
 
  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
 
  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
 
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
 
  tags = {
    Name = "anil-web-sg"
  }
}
 
# Define the EC2 Instance
resource "aws_instance" "web" {
  ami                    = "ami-0c55b159cbfafe1f0"  
  instance_type          = "t2.micro"
  subnet_id              = aws_subnet.public.id
  key_name               = "samundrakeypair" 
  vpc_security_group_ids = [aws_security_group.samundra_sg.id]
 
  tags = {
    Name = "samundraec2"
  }
}
